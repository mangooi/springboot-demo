<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.mangooi.springboot.demo.mapper.UserInfoMapper">

    <!--id对应接口中的方法，名字要一样，parameterType是方法的参数类型，
    resultType是查询返回的类型，需要注意的是，这里的SQL语句后面不能加分号，变量不能加引号-->
    <insert id="insert" parameterType="string">
        insert into user_Info(USER_ID) values(#{userId})
    </insert>

    <select id="getUsers"  resultType="User">
        select * from user_Info order by #{id}
    </select>

    <update id="updateUser" parameterType="User">
        update user_Info set name=#{name} where id = #{id}
    </update>

    <delete id="deleteAllUsers">
        delete from user_Info
    </delete>

    <delete id="deleteUser" parameterType="int">
        delete from user_Info where id = #{id}
    </delete>

    <select id="getById" parameterType="int" resultType="User">
        select * from user_Info where id = #{id}
    </select>


</mapper>